<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="broadcast.tvde.be.mybroadcastapplication.MainActivity">

    <Button
            android:text="Send Broadcast Now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="174dp"
            android:id="@+id/button"
            android:onClick="sendBroadcastMessage"/>
    <Button
            android:text="To inner receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:id="@+id/button2"
            android:onClick="broadcastToInnerReceiver"/>
</RelativeLayout>
